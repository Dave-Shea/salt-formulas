# vim: syntax=dosini

[DEFAULT]
lib=
      msg () {
        echo "I: $1"
      }
      git_checkout_tcpcloud () {
        (git clone git+ssh://github.com/tcpcloud/salt-formula-$1.git $1 || git clone https://github.com/tcpcloud/salt-formula-$1.git $1)
      }
      git_checkout_openstack () {
        (git clone git+ssh://github.com/openstack/salt-formula-$1.git $1 || git clone https://github.com/openstack/salt-formula-$1.git $1) &&
        cd $1 &&
        git remote add gerrit ssh://$(git config --get gitreview.username)@review.openstack.org:29418/openstack/salt-formula-$1 &&
        git config gitreview.remote gerrit
      }
update = git pull --rebase

[cinder]
checkout = git_checkout_openstack cinder
skip = lazy

